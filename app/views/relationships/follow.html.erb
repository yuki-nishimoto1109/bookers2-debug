<div class='container'>
  <h1>Follow Users</h1>
  <div class='row'>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @relationships.each do |relationship| %>
          <tr>
            <td><%= image_tag relationship.followed.get_profile_image, size: '50x50' %></td>
            <td><%= relationship.followed.name %></td>
            <td>フォロー数: <%= relationship.followed.follower.count %></td>
            <th>フォロワー数: <%= relationship.followed.followed.count %></td>
            <td><%= link_to 'Show', relationship.followed %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>