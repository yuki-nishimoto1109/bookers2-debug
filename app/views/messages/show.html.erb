<div class="container" id="chatmessage">
  <h1><%= @user_to.name %>さんとのチャット</h1>
  <% @messages.each do |message| %>
    <div class="<%= ('d-flex justify-content-').concat(message.user_id_from == current_user.id ? 'end':'start') %>" >
      <%= message.message %>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
      <%= form_with model: @message, url: user_message_post_path(current_user.id, params[:id]) , local:false do |f| %>
        <div class="form-group">
          <%= f.text_field :message, class: 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
